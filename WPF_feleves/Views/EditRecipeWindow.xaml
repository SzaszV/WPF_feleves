<Window x:Class="WPF_feleves.Views.EditRecipeWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:local="clr-namespace:WPF_feleves.Views"
     mc:Ignorable="d"
     Title="EditRecipeWindow" Height="500" Width="800" BorderBrush="#404040" BorderThickness="5">
 <ScrollViewer VerticalScrollBarVisibility="Hidden" >
     <Grid Background="#A86523">
         <StackPanel Margin="10">
             <Label Content="Recipe Name" FontWeight="Bold" Margin="0,0,20,20" />
             <TextBox Text="{Binding Name, Mode=TwoWay}" Margin="0,0,20,10" BorderBrush="#404040" BorderThickness="3" />
             
             <Label Content="Ingredients" FontWeight="Bold" Margin="0,0,20,20" />
             <ListBox ItemsSource="{Binding Ingredients}" Margin="0,0,20,10" BorderBrush="#404040" BorderThickness="3">
                 <ListBox.ItemTemplate>
                     <DataTemplate>
                         <StackPanel Orientation="Horizontal">
                             <TextBox Text="{Binding ., Mode=TwoWay}" Width="300" Margin="0,0,10,0" BorderBrush="#404040" BorderThickness="2" />
                             <Button Content="Remove" Command="{Binding DataContext.RemoveIngredientCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Width="75" />
                         </StackPanel>
                     </DataTemplate>
                 </ListBox.ItemTemplate>
             </ListBox>
                <TextBox Text="{Binding selectedIngredient}" Width="250" Margin="0,0,5,10" BorderThickness="3" BorderBrush="#404040" HorizontalAlignment="Left"/>
                <Button Content="Add Ingredient" Command="{Binding AddIngredientCommand}" Width="150" HorizontalAlignment="Left" Margin="0,0,20,10" BorderBrush="#404040" BorderThickness="3" />
             
             <Label Content="Instructions" FontWeight="Bold" Margin="0,0,0,20" />
             <TextBox Text="{Binding Instructions, Mode=TwoWay}" Margin="0,0,20,10" AcceptsReturn="True" Height="80" BorderBrush="#404040" BorderThickness="3" TextWrapping="WrapWithOverflow" />

                <Button Content="Save" Command="{Binding SaveCommand}" Click="CancelClick" Width="100" HorizontalAlignment="Right" BorderBrush="#404040" BorderThickness="3" Margin="0,0,20,10" />
         </StackPanel>
     </Grid>
 </ScrollViewer>
</Window>
