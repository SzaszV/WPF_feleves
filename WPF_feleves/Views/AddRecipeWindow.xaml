<Window x:Class="WPF_feleves.Views.AddRecipeWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Add Recipe" Height="480" Width="720" Background="#FFDF88" BorderThickness="5" BorderBrush="#404040" >
   <Grid Margin="10">
       <StackPanel>
           <Grid>
               <StackPanel Background="#FFDF88">
                   <Label Content="Name: " FontWeight="Bold" Margin="1,7,1,7" Background="#A76545" BorderThickness="3" BorderBrush="#404040"/>
                    <TextBox Height="30" Text="{Binding Name}" VerticalAlignment="Top" HorizontalAlignment="Stretch" BorderThickness="3" BorderBrush="#404040" />
                    <Label Content="Ingredients:" FontWeight="Bold" Margin="0,7,0,7" Background="#A76545" BorderThickness="3" BorderBrush="#404040"/>
                   
                   
                    <ListBox ItemsSource="{Binding Ingredient}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding NewIngredient, UpdateSourceTrigger=PropertyChanged}" Width="250" BorderThickness="3" BorderBrush="#404040"/>
                                    <Button Content="Add" Command="{Binding AddIngredientCommand}" Background="#A76545" BorderThickness="3" BorderBrush="#404040"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Orientation="Horizontal">
                        <ListBox ItemsSource="{Binding Ingredients}" Width="Auto" BorderThickness="3" BorderBrush="#404040">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding Path=., Mode=TwoWay}" Width="250"  BorderThickness="2" BorderBrush="#404040" />
                                        <Button Content="Remove" Command="{Binding DataContext.RemoveIngredientCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" Width="80" Background="#A76545" BorderThickness="2" BorderBrush="#404040"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                       <TextBox Text="{Binding NewIngredient}" Width="250" Margin="0,0,5,0" BorderThickness="3" BorderBrush="#404040"/>
                       <Button Content="Add" Command="{Binding AddIngredientCommand}" Background="#A76545" BorderThickness="3" BorderBrush="#404040" Width="70"/>
                   </StackPanel>

                   <Label Content="Instructions:" FontWeight="Bold" Margin="0,7,0,7" Background="#A76545" BorderThickness="3" BorderBrush="#404040"/>
                   <TextBox Height="30" Text="{Binding Instructions}" VerticalAlignment="Top" HorizontalAlignment="Stretch" BorderThickness="3" BorderBrush="#404040" />
               </StackPanel>
           </Grid>
           <Button Content="Add" Command="{Binding AddRecipeCommand}" Width="90" Margin="4" FontWeight="DemiBold" Background="#A76545" BorderThickness="3" BorderBrush="#404040"/>
           <Button Content="Cancel" Click="CancelClick" Width="90" Margin="2" FontWeight="DemiBold" Background="#A76545" BorderThickness="3" BorderBrush="#404040"/>
       </StackPanel>
   </Grid>
</Window>
